{
  "parser": "babel-eslint",
  "rules": {
    "no-underscore-dangle": 0,
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "react/prop-types": 0,
    "jsx-a11y/anchor-is-valid": [ 
      "error", {
        "components": [ "Link" ],
        "specialLink": [ "hrefLeft", "hrefRight", "to" ],
        "aspects": [ "noHref", "invalidHref", "preferButton" ]
      }
    ],
    "import/no-named-as-default": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb"
}